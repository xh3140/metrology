<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_view_edit_background" />
            <stroke android:width="1dp" android:color="@color/item_view_border" />
            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_view_edit_background" />
            <stroke android:width="1dp" android:color="@color/item_view_focus_border" />
            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>